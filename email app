<script >
function fares() {
    $.ajax({
       // url: "TrainFareServlet",
       url:'TrainController',
        type: "POST",
        success: function (response) {
        
        	if(response){
  			  var fare = response;     
            $('#fare').val(fare);
           
        	}
        	else{
        		alert("Error");
        	}
           
        },
        error: function (xhr, status, error) {
            alert("An error occurred while fetching the record: " + error);
        }
    });
}</script>


